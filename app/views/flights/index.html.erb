<%= form_with model: @flight, method: :get do |f| %>
  <%= select_tag(:departure_airport_id , options_for_select(@departure_airports)) %>
  <%= f.label :departure_airport_id, "Departure Airport" %><br><br>
  <%= select_tag(:arrival_airport_id , options_for_select(@arrival_airports)) %>
  <%= f.label :arrival_airport_id, "Arrival Airport" %><br><br>
  <%= select_tag(:departure_date, options_from_collection_for_select(Flight.get_flight_dates, :departure_date, :departure_date_formatted)) %>
  <%= f.label :departure_date, "Departure Date" %><br><br>
  <%= select_tag(:passengers, options_for_select(@passengers)) %>
  <%= f.label :passengers, "Number of Passengers" %><br><br>
  <%= f.submit "Search" %>
<% end %>

<% @results.each do |result| %>
  <ul>  
    <li>
      <%= "Flight Number:" %>
      <%= result.id %><br>
      <%= "Departing From: " %>
      <%= Airport.find(result.departure_airport_id).code %><br>
      <%= "Arriving at: " %>
      <%= Airport.find(result.arrival_airport_id).code %><br>
      <%= "Departing on: " %>
      <%= result.departure_date_formatted %>
    </li>
  </ul>
<% end %>