<%= form_with model: @booking, method: :post do |f| %>
  <%= "Flight Number:" %>
  <%= params[:flight_id] %><br>
  <%= "Departure Airport: " %>
  <%= Airport.find(params[:departure_airport_id]).code %><br>
  <%= "Arrival Airport: " %>
  <%= Airport.find(params[:arrival_airport_id]).code %><br>
  <%= "Departure Date: " %>
  <%= params[:departure_date] %><br><br>
  <%= "Passengers: " %><br><br>
  <%= f.fields_for :passengers do |passengers_form|%>
    <%= passengers_form.label :name, "Name: " %>
    <%= passengers_form.text_field :name %><br>
    <%= passengers_form.label :email, "Email: " %>
    <%= passengers_form.text_field :email %><br><br>
  <% end %>
  <%= f.submit "Submit" %>
<% end %>