<%= form_with model: @booking do |f| %>
  <%= "Flight Number:" %>
  <%= params[:flight_id] %><br>
  <%= "Departure Airport: " %>
  <%= params[:departure_airport_id] %><br>
  <%= "Arrival Airport: " %>
  <%= params[:arrival_airport_id] %><br>
  <%= "Departure Date: " %>
  <%= params[:departure_date] %><br>
  <%= "Number of Passengers: " %>
  <%= params[:passengers] %><br>
  
  <%= f.submit "Submit" %>
<% end %>