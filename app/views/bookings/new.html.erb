<%= form_with model: @booking, method: :post do |f| %>
  <%= "Flight Number:" %>
  <%= params[:flight_id] %><br>
  <%= "Departure Airport: " %>
  <%= Airport.find(params[:departure_airport_id]).code %><br>
  <%= "Arrival Airport: " %>
  <%= Airport.find(params[:arrival_airport_id]).code %><br>
  <%= "Departure Date: " %>
  <%= params[:departure_date] %><br><br>
  <%= params[:passengers].to_i.times do |i| %>
    <%= "Passenger #{i + 1}" %><br>
    <%= f.label :name, "Name: " %>
    <%= f.text_field :name %><br>
    <%= f.label :email, "Email: " %>
    <%= f.text_field :email %><br><br>
  <% end %>
  <%= f.submit "Submit" %>
<% end %>